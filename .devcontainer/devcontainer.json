{
    "name": "ROS2 Husky Development Container",
    "privileged": true,
    // "remoteUser": "container_user",
    // "containerUser": "container_user",
    // "build": {
    //     "dockerfile": "Dockerfile"
    // },
    "image": "ghcr.io/rtarun1/husky_base:v2.0",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/container_user/husky_ws/src,type=bind",
    "workspaceFolder": "/home/container_user/husky_ws/src",
    "customizations": {
        "vscode": {
            "settings": {
                "actionButtons": {
                    "defaultColor": "#ff0034", // Can also use string color names.
                    "loadNpmCommands": false, // Disables automatic generation of actions for npm commands.
                    "reloadButton": "♻️", // Custom reload button text or icon (default ↻). null value enables automatic reload on configuration change
                    "commands": [
                        {
                            "name": "Build WS",
                            "cwd": "/husky_ws",
                            "color": "aqua",
                            "singleInstance": true,
                            "command": "colcon build --symlink-install && source install/setup.bash" // This is executed in the terminal.
                        }
                    ]
                }
            },
            "extensions":[
				"althack.ament-task-provider",
				"betwo.b2-catkin-tools",
				"DotJoshJohnson.xml",
				"ms-azuretools.vscode-docker",
				"ms-iot.vscode-ros",
				"ms-python.python",
				"ms-vscode.cpptools",
				"redhat.vscode-yaml",
                "seunlanlege.action-buttons",
				"smilerobotics.urdf",
				"streetsidesoftware.code-spell-checker",
				"twxs.cmake",
				"yzhang.markdown-all-in-one",
				"zachflower.uncrustify"
            ]
        }
    },
    "containerEnv": {
		"DISPLAY":"${localEnv:DISPLAY}", // Needed for GUI try ":0" for windows
		"WAYLAND_DISPLAY": "${localEnv:WAYLAND_DISPLAY}",
		"XDG_RUNTIME_DIR": "${localEnv:XDG_RUNTIME_DIR}",
		"PULSE_SERVER": "${localEnv:PULSE_SERVER}",
        "QT_X11_NO_MITSHM": "1",
		"LIBGL_ALWAYS_SOFTWARE": "1" // Needed for software rendering of opengl
    },
    "runArgs": [
        // RealTime
		"--cap-add=SYS_NICE",
        "--ulimit=rtprio=99",
        "--ulimit=rttime=-1",
        "--ulimit=memlock=8428281856",
        // This will allow you to use a ptrace-based debugger like C++, Go, and Rust.
		"--cap-add=all",
        "--security-opt=seccomp:unconfined",
        "--security-opt=apparmor:unconfined",
        "--volume=/dev:/dev",
        "--net=host",
        "--ipc=host",
        "--name=husky_ws"
    ],
    "postStartCommand": "sudo chown -R container_user:container_user /home/container_user/husky_ws /run"
}